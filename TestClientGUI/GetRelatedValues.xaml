<Window x:Class="TestClientGUI.GetRelatedValues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClientGUI"
        mc:Ignorable="d"
        Title="Get Related Values" Height="800" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>

            <StackPanel 
                 DockPanel.Dock="Top"
                 Orientation="Horizontal"
                 Background="LightGray"
                 Height="50">

             <Button
                 x:Name="getValues"
                 Content="Get Values"
                 Width="120"
                 Margin="5"
                 Click="getValues_Click"/>

            <Button
                 x:Name="getExtentValues"
                 Content="Get Extent Values"
                 Width="120"
                 Margin="5"
                 Click="getExtentValues_Click"/>

            <Button
                 x:Name="getRelatedValues"
                 Content="Get Related Values"
                 Width="120"
                 Margin="5"
                 Click="getRelatedValues_Click"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">

                    <Label Content="Select GID:"/>
                    <ComboBox x:Name="InputComboBox" Height="30" Margin="0,0,0,10" SelectionChanged="InputComboBox_SelectionChanged"/>

                    <Label Content="Choose Association ModelCode:" Margin="0,10,0,5"/>
                    <ComboBox x:Name="AssociationComboBox" Height="30" Margin="0,0,0,10"
                          SelectionChanged="AssociationComboBox_SelectionChanged"/>

                    <Label Content="Choose concrete class DMSType:" Margin="0,10,0,5"/>
                    <ComboBox x:Name="DMSTypeComboBox" Height="30" Margin="0,0,0,10"
                          SelectionChanged="DMSTypeComboBox_SelectionChanged"/>

                    <Button x:Name="GetValuesButton" Content="Get Related Values" Height="30" Width="160" Margin="0,0,0,20" Click="GetValuesButton_Click"/>

                    <CheckBox x:Name="SelectAllCheckBox" Content="Select All Properties" Margin="0,0,0,10" Click="SelectAllCheckBox_Click"/>

                    <ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
                        <UniformGrid x:Name="CheckBoxGrid" Columns="1"/>
                    </ScrollViewer>

                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10">
                    <Label Content="Results:"/>
                    <TextBox x:Name="ResultsTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="600" TextWrapping="Wrap" IsReadOnly="True"/>
                </StackPanel>

            </Grid>
        </DockPanel>
    </Grid>
</Window>
