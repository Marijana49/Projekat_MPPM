<Window x:Class="TestClientGUI.GetExtentValues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClientGUI"
        mc:Ignorable="d"
        Title="Get Extent Values" Height="800" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="50" Background="LightGray">
                <Button x:Name="GetValuesNavButton" Content="Get Values" Width="120" Margin="5" Click="getValues_Click"/>
                <Button x:Name="GetExtentValuesNavButton" Content="Get Extent Values" Width="150" Margin="5" Click="getExtentValues_Click"/>
                <Button x:Name="GetRelatedValuesNavButton" Content="Get Related Values" Width="160" Margin="5" Click="getRelatedValues_Click"/>
            </StackPanel>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
                    <Label Content="Select ModelCode:"/>
                    <ComboBox x:Name="ModelCodeComboBox" Height="30" Margin="0,0,0,10" SelectionChanged="ModelCodeComboBox_SelectionChanged"/>

                    <Button x:Name="GetExtentValuesButton" Content="Get Extent Values" Height="30" Width="160" Margin="0,0,0,20" Click="GetExtentValuesButton_Click"/>

                    <CheckBox x:Name="SelectAllCheckBox" Content="Select All Properties" Margin="0,0,0,10" Click="SelectAllCheckBox_Click"/>

                    <ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
                        <UniformGrid x:Name="CheckBoxGrid" Columns="1"/>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10">
                    <Label Content="Results:"/>
                    <TextBox x:Name="ResultsTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="600" TextWrapping="Wrap" IsReadOnly="True"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
